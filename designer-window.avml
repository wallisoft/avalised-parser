# Avalised Visual Designer Window
# The designer that designs itself!

Window: DesignerWindow
  Title: Avalised Designer v1.0
  Width: 1400
  Height: 900
  MinWidth: 1226
  MinHeight: 768
  
  Children:
    - DockPanel: MainLayout
      LastChildFill: true
      
      Children:
        # ========== TOP MENU BAR ==========
        - DockPanel: MenuBar
          Height: 26
          DockPanel.Dock: Top
          LastChildFill: true
          
          Children:
            - Menu: TopMenu
              Padding: 2,0,2,0
              FontSize: 14
              
              Children:
                - MenuItem: FileMenu
                  Header: _File
                  
                  Children:
                    - MenuItem: FileNew
                      Header: _New
                      InputGesture: Ctrl+N
                      ToolTip: Create new form
                      Action: file.new
                      
                    - MenuItem: FileOpen
                      Header: _Open
                      InputGesture: Ctrl+O
                      ToolTip: Open AVML file
                      Action: file.open
                      
                    - MenuItem: FileSave
                      Header: _Save
                      InputGesture: Ctrl+S
                      ToolTip: Save to AVML
                      Action: file.save
                      
                    - Separator: FileSep0
                      
                    - MenuItem: FileExport
                      Header: _Export AVML
                      InputGesture: Ctrl+E
                      ToolTip: Export current design to AVML
                      Action: file.export
                      
                    - Separator: FileSep1
                      
                    - MenuItem: FileExit
                      Header: E_xit
                      InputGesture: Alt+F4
                      Action: file.exit
                      
                - MenuItem: EditMenu
                  Header: _Edit
                  
                  Children:
                    - MenuItem: EditUndo
                      Header: _Undo
                      InputGesture: Ctrl+Z
                      IsEnabled: false
                      
                    - MenuItem: EditRedo
                      Header: _Redo
                      InputGesture: Ctrl+Y
                      IsEnabled: false
                      
                    - Separator: EditSep1
                      
                    - MenuItem: EditCut
                      Header: Cu_t
                      InputGesture: Ctrl+X
                      IsEnabled: false
                      
                    - MenuItem: EditCopy
                      Header: _Copy
                      InputGesture: Ctrl+C
                      IsEnabled: false
                      
                    - MenuItem: EditPaste
                      Header: _Paste
                      InputGesture: Ctrl+V
                      IsEnabled: false
                      
                    - MenuItem: EditDelete
                      Header: _Delete
                      InputGesture: Delete
                      IsEnabled: false
                      
                - MenuItem: ViewMenu
                  Header: _View
                  
                  Children:
                    - MenuItem: ViewToolbox
                      Header: _Toolbox
                      InputGesture: Ctrl+Alt+X
                      IsEnabled: false
                      
                    - MenuItem: ViewProperties
                      Header: _Properties
                      InputGesture: F4
                      IsEnabled: false
                      
                    - MenuItem: ViewGrid
                      Header: Show _Grid
                      IsEnabled: false
                      
                - MenuItem: ToolsMenu
                  Header: _Tools
                  
                  Children:
                    - MenuItem: ToolsValidate
                      Header: _Validate AVML
                      InputGesture: F7
                      ToolTip: Validate current design against schema
                      IsEnabled: false
                      
                    - Separator: ToolsSep1
                    
                    - MenuItem: ToolsComingSoon
                      Header: Coming Soon...
                      IsEnabled: false
                      
                      Children:
                        - MenuItem: ToolsImportVB5
                          Header: Import VB5/6
                          IsEnabled: false
                          
                        - MenuItem: ToolsClaudeAI
                          Header: Claude AI Integration
                          IsEnabled: false
                          
                        - MenuItem: ToolsMacroRecorder
                          Header: Macro Recorder
                          IsEnabled: false
                
                - MenuItem: DemoMenu
                  Header: _Demo
                  
                  Children:
                    - MenuItem: DemoDialogInfo
                      Header: Info Dialog (Soft-Coded)
                      ToolTip: Demonstrates AVML Action system
                      Action: dialog.info
                      ActionParams: title=Soft-Coded Action!;message=This dialog was triggered by AVML!\\n\\nNo hardcoded event handlers needed.\\nJust Action + ActionParams in YAML.\\n\\nâœ¨ The future of RAD!
                      
                    - MenuItem: DemoFileOpen
                      Header: File Open Dialog
                      ToolTip: File picker demo
                      Action: dialog.open
                      ActionParams: title=Open AVML File;filter=*.avml;directory=~/Downloads
                      
                    - Separator: DemoSep1
                    
                    - MenuItem: TestCreateControl
                      Header: ðŸ§ª Test Create Button
                      ToolTip: Test programmatic control creation
                
                - MenuItem: HelpMenu
                  Header: _Help
                  
                  Children:
                    - MenuItem: HelpDocs
                      Header: _Documentation
                      InputGesture: F1
                      ToolTip: https://github.com/wallisoft/avalised
                      Action: app.help
                      
                    - Separator: HelpSep1
                      
                    - MenuItem: HelpAbout
                      Header: _About Avalised
                      ToolTip: Built by Steve & Claude
                      Action: app.about

        # ========== BOTTOM STATUS BAR ==========
        - Border: StatusBar
          DockPanel.Dock: Bottom
          Height: 24
          Background: #2D5016
          BorderBrush: #CCCCCC
          BorderThickness: 0,1,0,0
          
          Children:
            - StackPanel: StatusContent
              Orientation: Horizontal
              Spacing: 20
              VerticalAlignment: Center
              Margin: 10,0,0,0
              
              Children:
                - TextBlock: StatusText
                  Text: Ready
                  Foreground: #E0E0E0
                  FontSize: 10
                  
                - TextBlock: WindowSize
                  Text: Window: 1400Ã—900
                  Foreground: #90EE90
                  FontSize: 10
                  
                - TextBlock: MousePosition
                  Text: Mouse: 0, 0
                  Foreground: #90EE90
                  FontSize: 10

        # ========== LEFT TOOLBOX ==========
        - Border: ToolboxContainer
          DockPanel.Dock: Left
          Width: 213
          Background: #F5F5F5
          BorderBrush: #444444
          BorderThickness: 2
          
          Children:
            - Border: ToolboxPanel
              Background: #F5F5F5
              BorderBrush: #E0E0E0
              BorderThickness: 0,0,1,0
              
              Children:
                - StackPanel: ToolboxContent
                  Orientation: Vertical
                  Spacing: 5
                  Margin: 10
                  
                  Children:
                    - TextBlock: ToolboxTitle
                      Text: TOOLBOX
                      FontSize: 14
                      FontWeight: Bold
                      Margin: 0,0,0,10
                      
                    - TextBlock: BasicLabel
                      Text: Basic Controls
                      FontSize: 10
                      Foreground: #666666
                      Margin: 0,5,0,5
                      
                    - Button: AddButton
                      Content: Button
                      Height: 32
                      Action: canvas.addcontrol
                      ActionParams: type=Button;x=150;y=150;width=100;height=32;content=Button
                      
                    - Button: AddTextBox
                      Content: TextBox
                      Height: 32
                      Action: canvas.addcontrol
                      ActionParams: type=TextBox;x=150;y=200;width=150;height=28;text=TextBox
                      
                    - Button: AddLabel
                      Content: Label
                      Height: 32
                      Action: canvas.addcontrol
                      ActionParams: type=TextBlock;x=150;y=250;width=80;height=24;text=Label
                      
                    - Button: AddCheckBox
                      Content: CheckBox
                      Height: 32
                      Action: canvas.addcontrol
                      ActionParams: type=CheckBox;x=150;y=300;width=100;height=24;content=CheckBox
                      
                    - TextBlock: LayoutLabel
                      Text: Layout Containers
                      FontSize: 10
                      Foreground: #666666
                      Margin: 0,15,0,5
                      
                    - Button: AddPanel
                      Content: Panel
                      Height: 32
                      Action: canvas.addcontrol
                      ActionParams: type=Panel;x=300;y=150;width=200;height=150;background=#EEEEEE
                      
                    - Button: AddStackPanel
                      Content: StackPanel
                      Height: 32
                      Action: canvas.addcontrol
                      ActionParams: type=StackPanel;x=300;y=320;width=200;height=150;background=#E3F2FD
                      
                    - Button: AddCanvas
                      Content: Canvas
                      Height: 32
                      Action: canvas.addcontrol
                      ActionParams: type=Canvas;x=520;y=150;width=200;height=150;background=#E8F5E9
                  
        # ========== RIGHT PROPERTIES ==========
        - Border: PropertiesContainer
          DockPanel.Dock: Right
          Width: 213
          Background: #F5F5F5
          BorderBrush: #444444
          BorderThickness: 2
          
          Children:
            - Border: PropertiesPanel
              Background: #F5F5F5
              BorderBrush: #E0E0E0
              BorderThickness: 1,0,0,0
              
              Children:
                - StackPanel: PropertiesContent
                  Orientation: Vertical
                  Spacing: 5
                  Margin: 10
                  
                  Children:
                    - TextBlock: PropertiesTitle
                      Text: PROPERTIES
                      FontSize: 14
                      FontWeight: Bold
                      Margin: 0,0,0,10
                      
                    - TextBlock: NoSelection
                      Text: No control selected
                      FontSize: 11
                      Foreground: #999999
                  
        # ========== CENTER CANVAS ==========
        - Border: CanvasContainer
          Background: #FAFAFA
          BorderBrush: #444444
          BorderThickness: 3
          Padding: 20
          
          Children:
            - Canvas: DesignCanvas
              Width: 800
              Height: 600
              Background: #FFFFFF
